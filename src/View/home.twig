{% extends "layout/layout.twig" %}

{% block title %}Accueil{% endblock %}

{% block content %}
    <main>
        <h1>Bienvenue sur mon blog</h1>
        <img src="../public/img/633217-les-simpson-une-enorme-incoherence-rep-diapo-2.webp" alt="iiiiiieieeing">

        {% block gallerie %}

        <ul>
            {% for publication in allPublications %}
                <li> {{publication.titre}} </li>
                <li> {{publication.datePublication}} </li>
            {% endfor %}

        </ul>

    </main>

    {% endblock %}

    <form action="index.php?access=publication!createPublication" method="post">

<div>
    <label for="userName">Nom d'utilisateur</label>
    <input type="text" name="userName" id="userName">
</div>

<div>
    <label for="email">Adresse email</label>
    <input type="email" name="email" id="email">
</div>

<div>
    <label for="password">Mot de passe</label>
    <input type="password" name="password" id="password">
</div>

<div>
    <label for="passwordCheck">MP Check</label>
    <input type="password" name="passwordCheck" id="passwordCheck">
</div>

<button type="submit">S'inscrire</button>

</form>

{% endblock %}