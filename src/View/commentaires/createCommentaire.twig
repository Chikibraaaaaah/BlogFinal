{% block edit %}

    {% block createCommentaire %}

            <h2>Ajoutez un commentaire à {{ article.titre }} </h2>

            <form action="index.php?access=comment_createComment&id={{ article.id }}" enctype="multipart/form-data" method="POST" class="commentaire_form">

                <div class="mb-3">
                    <label for="contenu" class="form-label">Votre commentaire: </label>
                    <textarea class="form-control" name="contenu" id="contenu" rows="10" required placeholder="Il était deux fois"></textarea>
                </div>

                <button class="btn btn-primary d-block">Commenter</button>
            </form>

    {% endblock %}
    
{% endblock %}