{% if user.isLogged == true %}

    {% for commentaire in commentaires %}
    
        {# {% if commentaire.valide == 1 %} #}
            <div>
                <p>
                    {{ commentaire.contenu }} - <strong>{{ commentaire.auteurId }}</strong> 
                    <time datetime="{{ commentaire.datePublication }}">{{ commentaire.datePublication }}</time>

                    {% if commentaire.auteurId == user.id or user.role == 1 %}

                        <button class="btn btn-danger">
                        <a href="index.php?access=comment_confirmDeleteComment&id={{ commentaire.id }}">Supprimer</a></button>
                    
                        <button class="btn btn-primary">
                            <a href="index.php?access=comment_editComment&id={{ commentaire.id }}">Modifier</a>
                        </button>

                    {% endif %}
                </p>  
            </div>
        {# {% endif %} #}

    {% endfor %}
    
{% else %}
            
    <p>Vous devez être authentifié pour poster un commentaire</p>
    <a href="index.php?access=auth_login">Se Connecter</a>

{% endif %}


        
   