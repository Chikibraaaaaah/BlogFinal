{% extends "layout/layout.twig" %}

{% block auth %}

    {% if alert and message|length > 0 %}

        <div class="{{ alert }}" role="alert" id="alert">
            {{ message }}
        </div>

    {% endif %}

    {% if method == "login" %}

        {% include "auth/login.twig" %}

    {% else %}
            
            {% include "auth/signup.twig" %}

    {% endif %}

{% endblock %}

