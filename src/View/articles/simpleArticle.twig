{% extends "layout/layout.twig" %}

{% block article %}

    <article>

        <h2> {{ article.titre }} - {{ article.datePublication }}</h2>

        <figure>
            <img src="{{ article.imgUrl }}" width="300" alt="{{ article.altImg }}">
            <figcaption>{{ article.contenu }}</figcaption>
            {% if user.role == 1 %}
                <button>
                    <a href="index.php?access=article_deleteArticle&id={{article.id}}">Supprimer</a>
                </button>
            {% endif %}
            
        </figure>

    </article>

    <aside>

        {% block commentaires %}

            {% include "commentaires/commentairesList.twig" %}

            {% if user %}
                {% block createCommentaire %}
                    {% include "commentaires/createCommentaire.twig" %}
                {% endblock %}
            {% endif %}

        {% endblock %}

    </aside>

{% endblock %}