{% extends "layout/layout.twig" %}

{% block article %}

    <article>

        <h2> {{ article.title }} - {{ article.createdAt }}</h2>

        <figure>
            <img src="{{ article.imgUrl }}" width="300" alt="{{ article.altImg }}">
            <figcaption>{{ article.content }}</figcaption>
            {% if user.role == 1 %}
                <button>
                    <a href="index.php?access=article_deleteArticle&id={{article.id}}">Supprimer</a>
                </button>
            {% endif %}
            
        </figure>

    </article>

    <aside>

        {% block commentaires %}

            {% include "commentaires/commentairesList.twig" %}

            {% if user %}

            {% if myCommentaire %}

                {% include "commentaires/editCommentaire.twig" %}

            {% else %}

                {% include "commentaires/createCommentaire.twig" %}
                         
            {% endif %}
            

                
                
            {% endif %}

        {% endblock %}

    </aside>

{% endblock %}