{% if user.isLogged == true %}

    {% for comment in comments %}
    
        {# {% if commentaire.valide > 0 %} #}
            <div>
                <p>
                    {{ comment.content }} - <strong>{{ comment.authorId }}</strong> 
                    <time datetime="{{ commentaire.createdAt }}">{{ commentaire.createdAt }}</time>

                    {% if comment.authorId is same as(user.id)  or user.role is same as(1) %}

                        <button class="btn btn-danger">
                        <a href="index.php?access=comment_confirmDeleteComment&id={{ comment.id }}">Supprimer</a></button>
                    
                        <button class="btn btn-primary">
                            <a href="index.php?access=comment_editComment&id={{ comment.id }}">Modifier</a>
                        </button>

                    {% endif %}
                </p>  
            </div>
        {# {% endif %} #}

    {% endfor %}
    
{% else %}
            
    <p>Vous devez être authentifié pour poster un commentaire</p>
    <a href="index.php?access=auth_login">Se Connecter</a>

{% endif %}


        
   